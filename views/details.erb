<h4>Post details:</h4>
<p>
	<%= @row['content'] %>
	<br />
	Added at <%= @row['created_date'] %>	
	<br/>
</p>

<h4>Comments:</h4>

<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br/>
		<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
	</p>
<% end %>
 
<p>
	<form action="/details/<%= @row['id'] %>" method="POST" role="form" >
		<textarea name="content" style="width: 400px" class="form-control" rows="6" placeholder="Пишем коментарий"></textarea>
		<br/>
	 	<button type="submit" class="btn btn-success">Add comment</button>
	</form>
</p>